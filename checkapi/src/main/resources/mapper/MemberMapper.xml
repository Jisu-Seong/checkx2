<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.js.checkapi.mapper.MemberMapper">

    <select id="getMemberList" resultType="com.js.checkapi.vo.Member">
        <!--회원목록 조회-->
        SELECT
        m.*
        FROM
        tbmember m
    </select>

    <select id="getMemberOne" parameterType= "Long" resultType="com.js.checkapi.vo.Member">
        SELECT 
        m.*
        FROM
        tbmember m
        WHERE m.memberid = #{id}
    </select>

    <select id="getMemberByEmail" parameterType="String" resultType="com.js.checkapi.vo.Member">
        SELECT
        m.*
        FROM
        tbmember m
        WHERE m.email = #{email}
    </select>

    <select id="isExistEmail" parameterType="String" resultType="int">
        SELECT 
        count(*)
        FROM
        tbmember m
        WHERE m.email = #{email}
    </select>
    
    <insert id="saveMember" parameterType="com.js.checkapi.vo.Member">
        INSERT INTO tbmember(email, password, nickname, social, role)
        VALUES(#{email}, #{password}, #{nickname}, #{social}, #{role})
    </insert>
    

</mapper>